rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{allPaths=**} {
      allow read;
      allow write: if  isAuth() && isAdmin(); 
    }

     function isAuth(){
        return request.auth != null;
    }

    function isAdmin(){
      return request.auth.token.role == "admin"
    }

  }
}